generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  BUSINESS
}

enum CouponStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  password          String
  name              String
  role              Role      @default(USER)
  membershipExpiry  DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relations
  coupons           Coupon[]  @relation("BusinessCoupons")
  
  @@index([email])
  @@index([role])
}

model Category {
  id        String   @id @default(cuid())
  nameEn    String   @unique
  nameEl    String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())
  
  // Relations
  coupons   Coupon[]
  
  @@index([slug])
}

model Coupon {
  id                  String        @id @default(cuid())
  businessId          String
  categoryId          String
  title               String
  description         String        @db.Text
  code                String
  imagePath           String?
  discountPercentage  Int
  expirationDate      DateTime
  status              CouponStatus  @default(PENDING)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  
  // Relations
  business            User          @relation("BusinessCoupons", fields: [businessId], references: [id], onDelete: Cascade)
  category            Category      @relation(fields: [categoryId], references: [id])
  
  @@index([businessId])
  @@index([categoryId])
  @@index([status])
  @@index([expirationDate])
}
